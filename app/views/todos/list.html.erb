<div class="container">
    <div class="row">
        <div class="col">
            <h4>No completado</h4>
                <table class="table table-dark">
                    <tr>
                    <th class="list">ToDo</th>
                    </tr>
                    <% @nocompleted.each do |todo|%>
                    <tr>
                    <td><%= todo.description%></td>
                    </tr>
                    <%end%>
                </table>
        </div>
    <div class="col">
        <h4>Completado</h4>
            <table class="table table-dark">
                <tr>
                <th class="list">ToDo</th>
                </tr>
                <% @completed.each do |todo|%>
                <tr>
                <td><%= todo.description%></td>
                </tr>
                <%end%>
        </table>
    </div>
</div>